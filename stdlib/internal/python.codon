# Type conversions


def py(x) -> pyobj:
    return x.__to_py__()


def get(x: pyobj, T: type) -> T:
    return T.__from_py__(x)


@extend
class int:
    def __to_py__(self) -> pyobj:
        return pyobj(pyobj.exc_wrap(PyLong_FromLong(self)), steal=True)

    def __from_py__(i: pyobj) -> int:
        return pyobj.exc_wrap(PyLong_AsLong(i.p))


@extend
class float:
    def __to_py__(self) -> pyobj:
        return pyobj(pyobj.exc_wrap(PyFloat_FromDouble(self)), steal=True)

    def __from_py__(d: pyobj) -> float:
        return pyobj.exc_wrap(PyFloat_AsDouble(d.p))


@extend
class bool:
    def __to_py__(self) -> pyobj:
        return pyobj(pyobj.exc_wrap(PyBool_FromLong(int(self))), steal=True)

    def __from_py__(b: pyobj) -> bool:
        return pyobj.exc_wrap(PyObject_IsTrue(b.p)) != 0


@extend
class byte:
    def __to_py__(self) -> pyobj:
        return str.__to_py__(str(__ptr__(self), 1))

    def __from_py__(c: pyobj) -> byte:
        return str.__from_py__(c).p[0]


@extend
class str:
    def __to_py__(self) -> pyobj:
        return pyobj(pyobj.exc_wrap(PyUnicode_DecodeFSDefaultAndSize(self.ptr, self.len)), steal=True)

    def __from_py__(s: pyobj) -> str:
        return pyobj.exc_wrap(s.to_str("strict"))


@extend
class List:
    def __to_py__(self) -> pyobj:
        pylist = PyList_New(len(self))
        pyobj.exc_check()
        idx = 0
        for a in self:
            PyList_SetItem(pylist, idx, a.__to_py__().incref().p)
            pyobj.exc_check()
            idx += 1
        return pyobj(pylist)

    def __from_py__(v: pyobj) -> List[T]:
        n = v.__len__()
        t = List[T](n)
        for i in range(n):
            elem = pyobj(PyList_GetItem(v.p, i))
            pyobj.exc_check()
            t.append(get(elem, T))
        return t


@extend
class Dict:
    def __to_py__(self) -> pyobj:
        pydict = PyDict_New()
        pyobj.exc_check()
        for k, v in self.items():
            PyDict_SetItem(pydict, k.__to_py__().incref().p, v.__to_py__().incref().p)
            pyobj.exc_check()
        return pyobj(pydict)

    def __from_py__(d: pyobj) -> Dict[K, V]:
        b = dict[K, V]()
        pos = 0
        k_ptr = cobj()
        v_ptr = cobj()
        while PyDict_Next(d.p, __ptr__(pos), __ptr__(k_ptr), __ptr__(v_ptr)):
            pyobj.exc_check()
            k = get(pyobj(k_ptr), K)
            v = get(pyobj(v_ptr), V)
            b[k] = v
        return b


@extend
class Set:
    def __to_py__(self) -> pyobj:
        pyset = PySet_New(cobj())
        pyobj.exc_check()
        for a in self:
            PySet_Add(pyset, a.__to_py__().incref().p)
            pyobj.exc_check()
        return pyobj(pyset)

    def __from_py__(s: pyobj) -> Set[K]:
        b = set[K]()
        s_iter = pyobj.exc_wrap(PyObject_GetIter(s.p))
        while True:
            k_ptr = pyobj.exc_wrap(PyIter_Next(s_iter))
            if not k_ptr:
                break
            k = get(pyobj(k_ptr), K)
            pyobj.decref(k_ptr)
            b.add(k)
        pyobj.decref(s_iter)
        return b
